[alias]
    commits = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
    by = log --author
    contributors = shortlog -s -n
    unstash = stash apply
    co = checkout
    com = checkout master
    cm = commit
    br = branch
    aa = add -A
    amn = add .
    fepul = !sh -c 'git co master && git fetch && git pull && git co $0' 
    puszm = push origin master
    pusz = !sh -c 'git push origin $0'
    fors = !sh -c 'git push origin $0 --force-with-lease'
    mrbs = rebase origin/master
    spierdalam = rebase --abort
    lecim = rebase --continue  
    perm = update-index --chmod=+x
    branches = show-branch -a
    soft = reset --soft
    hard = reset --hard
    update-modules = submodule update --init --recursive
[user]
        name = Bart Stefanski
        email = contact@bstefanski.com
